@page "/login"

<PageTitle>Login - AuthCookbook</PageTitle>

<div class="auth-container">
    <div class="auth-header">
        <h2>Choose Your Login Method</h2>
        <p>Select from the authentication options below</p>
    </div>

    <div class="login-grid">
        <!-- Session Cookie Login -->
        <div class="auth-card">
            <div class="auth-card-header">
                <h3>Session Cookie</h3>
                <p>Traditional email/password authentication</p>
            </div>
            <div class="auth-card-body">    
                <div class="form-group">
                    <input type="email" placeholder="Email" class="form-input" />
                </div>
                <div class="form-group">
                    <input type="password" placeholder="Password" class="form-input" />
                </div>
                <button class="auth-btn primary">Login with Session</button>
            </div>
        </div>

        <!-- Token Login -->
        <div class="auth-card">
            <div class="auth-card-header">
                <h3>Token Authentication</h3>
                <p>Login with token expiry control</p>
            </div>
            <div class="auth-card-body">
                <div class="form-group">
                    <input type="email" placeholder="Email" class="form-input" />
                </div>
                <div class="form-group">
                    <input type="password" placeholder="Password" class="form-input" />
                </div>
                <div class="form-group">
                    <select class="form-input">
                        <option>1 Hour</option>
                        <option>24 Hours</option>
                        <option>7 Days</option>
                        <option>30 Days</option>
                    </select>
                </div>
                <button class="auth-btn primary">Login with Token</button>
            </div>
        </div>

        <!-- JWT Login -->
        <div class="auth-card">
            <div class="auth-card-header">
                <h3>JWT Authentication</h3>
                <p>JSON Web Token with refresh option</p>
            </div>
            <div class="auth-card-body">
                <div class="form-group">
                    <input type="email" placeholder="Email" class="form-input" />
                </div>
                <div class="form-group">
                    <input type="password" placeholder="Password" class="form-input" />
                </div>
                <div class="form-group checkbox-group">
                    <input type="checkbox" id="refreshToken" />
                    <label for="refreshToken">Enable Refresh Token</label>
                </div>
                <button class="auth-btn primary">Login with JWT</button>
            </div>
        </div>

        <!-- SSO Login -->
        <div class="auth-card">
            <div class="auth-card-header">
                <h3>Single Sign-On</h3>
                <p>Enterprise authentication providers</p>
            </div>
            <div class="auth-card-body">
                <button class="auth-btn azure">
                    <span class="btn-icon">üè¢</span>
                    Azure AD
                </button>
                <button class="auth-btn google">
                    <span class="btn-icon">üîç</span>
                    Google Workspace
                </button>
                <button class="auth-btn okta">
                    <span class="btn-icon">üîê</span>
                    Okta
                </button>
            </div>
        </div>

        <!-- OAuth2 Login -->
        <div class="auth-card">
            <div class="auth-card-header">
                <h3>OAuth2 Providers</h3>
                <p>Social and development platforms</p>
            </div>
            <div class="auth-card-body">
                <button class="auth-btn github">
                    <span class="btn-icon">üíª</span>
                    GitHub
                </button>
                <button class="auth-btn google">
                    <span class="btn-icon">üîç</span>
                    Google
                </button>
                <button class="auth-btn microsoft">
                    <span class="btn-icon">ü™ü</span>
                    Microsoft
                </button>
            </div>
        </div>

        <!-- QR Code Login -->
        <div class="auth-card">
            <div class="auth-card-header">
                <h3>QR Code Login</h3>
                <p>Scan with your mobile device</p>
            </div>
            <div class="auth-card-body">
                <div class="qr-placeholder">
                    <div class="qr-code">
                        <div class="qr-pattern"></div>
                    </div>
                    <p>Scan to authenticate</p>
                </div>
                <button class="auth-btn secondary">Refresh QR Code</button>
            </div>
        </div>
    </div>

    <div class="auth-footer">
        <p>Don't have an account? <a href="/register">Sign up here</a></p>
    </div>
</div>