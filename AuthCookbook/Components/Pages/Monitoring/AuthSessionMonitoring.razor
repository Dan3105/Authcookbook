@page "/monitoring/sessions"
@    using AuthCookbook.Core.Models
@    using AuthCookbook.Core.Services.Users
@inject IMonitoringService MonitoringService
@rendermode InteractiveServer

<PageTitle>Session Monitoring</PageTitle>

<h1>Auth Session Monitoring</h1>

<p>This page displays all authentication sessions in the system.</p>

@if (sessions == null)
{
    <p><em>Loading...</em></p>
}
else if (sessions.Count == 0)
{
    <div class="alert alert-info">
        <strong>No sessions found.</strong> There are currently no active sessions in the system.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Session ID</th>
                    <th scope="col">User ID</th>
                    <th scope="col">Created At</th>
                    <th scope="col">Expires At</th>
                    <th scope="col">Status</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var session in sessions)
                {
                    <tr>
                        <td>@session.SessionId</td>
                        <td>@session.UserId</td>
                        <td>@session.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                        <td>@session.ExpiresAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                        <td>
                            @if (session.ExpiresAt > DateTime.UtcNow)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Expired</span>
                            }
                        </td>
                        <td>
                            <button class="btn btn-sm btn-outline-primary" @onclick="() => ViewSessionDetails(session.SessionId)">
                                View Details
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-3">
        <p class="text-muted">Total sessions: @sessions.Count</p>
    </div>
}

@code {
    private List<AuthSession>? sessions;

    protected override void OnInitialized()
    {
        LoadSessions();
    }

    private void LoadSessions()
    {
        try
        {
            sessions = MonitoringService.AllSessions();
        }
        catch (Exception ex)
        {
            // Log error or show error message
            Console.WriteLine($"Error loading sessions: {ex.Message}");
            sessions = new List<AuthSession>();
        }
    }

    private void ViewSessionDetails(Guid sessionId)
    {
        // Placeholder for future functionality
        // Could navigate to a session details page or show a modal
        Console.WriteLine($"View details for session: {sessionId}");
    }
}