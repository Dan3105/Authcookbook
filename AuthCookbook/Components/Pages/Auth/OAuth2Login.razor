@page "/login/oauth2"

<PageTitle>OAuth2 Login - AuthCookbook</PageTitle>

<div class="auth-container">
    <div class="auth-header">
        <h2>OAuth2 Providers</h2>
        <p>Social and development platforms</p>
    </div>

    <div class="login-grid">
        <div class="auth-card">
            <div class="auth-card-header">
                <h3>OAuth2 Providers</h3>
                <p>Social and development platforms</p>
            </div>
            <div class="auth-card-body">
                <button class="auth-btn github">
                    <span class="btn-icon">💻</span>
                    GitHub
                </button>
                <button class="auth-btn google">
                    <span class="btn-icon">🔍</span>
                    Google
                </button>
                <button class="auth-btn microsoft">
                    <span class="btn-icon">🪟</span>
                    Microsoft
                </button>
            </div>
        </div>
    </div>

    <div class="auth-footer">
        <p>Don't have an account? <a href="/register">Sign up here</a></p>
    </div>
</div>