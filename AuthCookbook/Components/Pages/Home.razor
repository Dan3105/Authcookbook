@page "/"

<PageTitle>AuthCookbook - Authentication Demo</PageTitle>

<div class="home-container">
    <div class="hero-section">
        <h1>AuthCookbook</h1>
        <p class="hero-subtitle">Explore different authentication methods in Blazor</p>
        
        <div class="action-buttons">
            <a href="/login" class="btn-action primary">
                🔐 Explore Login Methods
            </a>
            <a href="/register" class="btn-action secondary">
                📝 Try Registration
            </a>
        </div>
    </div>

    <div class="features-grid">
        <div class="feature-card">
            <h3>Session Cookies</h3>
            <p>Traditional server-side session management</p>
        </div>
        <div class="feature-card">
            <h3>JWT Tokens</h3>
            <p>Stateless authentication with JSON Web Tokens</p>
        </div>
        <div class="feature-card">
            <h3>OAuth2 & SSO</h3>
            <p>Third-party authentication providers</p>
        </div>
        <div class="feature-card">
            <h3>QR Code Auth</h3>
            <p>Mobile-first authentication experience</p>
        </div>
    </div>
</div>
