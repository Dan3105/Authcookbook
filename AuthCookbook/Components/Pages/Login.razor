@page "/login"

<PageTitle>Login - AuthCookbook</PageTitle>

<div class="auth-container">
    <div class="auth-header">
        <h2>Choose Your Login Method</h2>
        <p>Select from the authentication options below</p>
    </div>

    <div class="login-grid">
        <!-- Session Cookie Login -->
        <div class="auth-card">
            <div class="auth-card-header">
                <h3>Session Cookie</h3>
                <p>Traditional email/password authentication</p>
            </div>
            <div class="auth-card-body">
                <a href="/login/session" class="auth-btn primary">Go to Session Login</a>
            </div>
        </div>

        <!-- Token Login -->
        <div class="auth-card">
            <div class="auth-card-header">
                <h3>Token Authentication</h3>
                <p>Login with token expiry control</p>
            </div>
            <div class="auth-card-body">
                <a href="/login/token" class="auth-btn primary">Go to Token Login</a>
            </div>
        </div>

        <!-- JWT Login -->
        <div class="auth-card">
            <div class="auth-card-header">
                <h3>JWT Authentication</h3>
                <p>JSON Web Token with refresh option</p>
            </div>
            <div class="auth-card-body">
                <a href="/login/jwt" class="auth-btn primary">Go to JWT Login</a>
            </div>
        </div>

        <!-- SSO Login -->
        <div class="auth-card">
            <div class="auth-card-header">
                <h3>Single Sign-On</h3>
                <p>Enterprise authentication providers</p>
            </div>
            <div class="auth-card-body">
                <a href="/login/sso" class="auth-btn primary">Go to SSO Login</a>
            </div>
        </div>

        <!-- OAuth2 Login -->
        <div class="auth-card">
            <div class="auth-card-header">
                <h3>OAuth2 Providers</h3>
                <p>Social and development platforms</p>
            </div>
            <div class="auth-card-body">
                <a href="/login/oauth2" class="auth-btn primary">Go to OAuth2 Login</a>
            </div>
        </div>

        <!-- QR Code Login -->
        <div class="auth-card">
            <div class="auth-card-header">
                <h3>QR Code Login</h3>
                <p>Scan with your mobile device</p>
            </div>
            <div class="auth-card-body">
                <a href="/login/qr" class="auth-btn primary">Go to QR Login</a>
            </div>
        </div>
    </div>

    <div class="auth-footer">
        <p>Don't have an account? <a href="/register">Sign up here</a></p>
    </div>
</div>